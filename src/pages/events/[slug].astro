---
import fs from 'fs';
import path from 'path';

const { slug } = Astro.params;

// Read events dynamically to ensure we get the latest data
let events = [];
try {
  const eventsPath = path.join(process.cwd(), 'data', 'events.json');
  const eventsData = fs.readFileSync(eventsPath, 'utf-8');
  events = JSON.parse(eventsData);
} catch (error) {
  console.error('Error reading events:', error);
  events = [];
}

const event = events.find((e) => e.slug === slug);
if (!event) throw new Error("Event not found");

// Create share messages
const eventUrl = `${Astro.site || 'http://localhost:4321'}/events/${event.slug}`;
const shareMessage = `Hey! Here's my event "${event.title}" on ${event.date} at ${event.location}. Make sure to RSVP and come to the event! ${eventUrl}`;
---

<html>
  <head>
    <title>{event.title} - Artist Events</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        line-height: 1.6;
        color: #333;
        background-color: #f8f9fa;
      }
      
      .header-nav {
        margin-bottom: 2rem;
      }
      
      .back-link {
        color: #667eea;
        text-decoration: none;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
      }
      
      .back-link:hover {
        text-decoration: underline;
      }
      
      .event-container {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        overflow: hidden;
      }
      
      .event-header {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
        padding: 2rem;
        text-align: center;
      }
      
      .event-title {
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
        font-weight: bold;
      }
      
      .event-artist {
        font-size: 1.2rem;
        opacity: 0.9;
        margin-bottom: 1rem;
      }
      
      .genre-badge {
        display: inline-block;
        background: rgba(255,255,255,0.2);
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 500;
      }
      
      .event-content {
        padding: 2rem;
      }
      
      .event-meta {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
        padding: 1.5rem;
        background: #f8f9fa;
        border-radius: 10px;
      }
      
      .meta-item {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
      }
      
      .meta-label {
        font-weight: 600;
        color: #667eea;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
      }
      
      .meta-value {
        font-size: 1.1rem;
        color: #2c3e50;
      }
      
      .meta-value a {
        color: #667eea;
        text-decoration: none;
      }
      
      .meta-value a:hover {
        text-decoration: underline;
      }
      
      .description-section {
        margin-bottom: 2rem;
      }
      
      .section-title {
        font-size: 1.5rem;
        color: #2c3e50;
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid #e9ecef;
      }
      
      .description {
        font-size: 1.1rem;
        color: #555;
        margin-bottom: 1.5rem;
      }
      
      .blog-section {
        margin-bottom: 2rem;
      }
      
      .blog-content {
        background: #f8f9fa;
        padding: 1.5rem;
        border-radius: 10px;
        border-left: 4px solid #667eea;
      }
      
      .blog-content p {
        margin-bottom: 1rem;
      }
      
      .blog-content p:last-child {
        margin-bottom: 0;
      }
      
      .tags-section {
        margin-bottom: 2rem;
      }
      
      .tags-container {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
      }
      
      .tag {
        background: #e3f2fd;
        color: #1976d2;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 500;
        border: 1px solid #bbdefb;
      }
      
      .share-section {
        background: #f8f9fa;
        padding: 2rem;
        border-radius: 10px;
        margin-top: 2rem;
      }
      
      .share-title {
        margin-bottom: 1rem;
        color: #2c3e50;
        font-size: 1.3rem;
      }
      
      .share-buttons {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
      }
      
      .share-btn {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1rem;
        text-decoration: none;
        border-radius: 8px;
        font-weight: 500;
        transition: transform 0.2s;
        cursor: pointer;
        border: none;
        font-size: 0.9rem;
      }
      
      .share-btn:hover {
        transform: translateY(-2px);
      }
      
      .share-btn.twitter {
        background: #1da1f2;
        color: white;
      }
      
      .share-btn.linkedin {
        background: #0077b5;
        color: white;
      }
      
      .share-btn.instagram {
        background: linear-gradient(45deg, #f09433 0%,#e6683c 25%,#dc2743 50%,#cc2366 75%,#bc1888 100%);
        color: white;
      }
      
      .share-btn.copy {
        background: #6c757d;
        color: white;
      }
      
      .icon {
        width: 16px;
        height: 16px;
        fill: currentColor;
      }
      
      .footer-nav {
        text-align: center;
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 1px solid #e9ecef;
      }
      
      @media (max-width: 768px) {
        .event-title {
          font-size: 2rem;
        }
        
        .event-meta {
          grid-template-columns: 1fr;
        }
        
        .share-buttons {
          flex-direction: column;
        }
        
        .share-btn {
          justify-content: center;
        }
      }
    </style>
  </head>
  <body>
    <nav class="header-nav">
      <a href="/events" class="back-link">‚Üê Back to all events</a>
    </nav>

    <div class="event-container">
      <div class="event-header">
        <h1 class="event-title">{event.title}</h1>
        <p class="event-artist">by {event.artist}</p>
        {event.genre && <span class="genre-badge">{event.genre}</span>}
      </div>

      <div class="event-content">
        <div class="event-meta">
          <div class="meta-item">
            <span class="meta-label">Date</span>
            <span class="meta-value">{event.date}</span>
          </div>
          <div class="meta-item">
            <span class="meta-label">Location</span>
            <span class="meta-value">{event.location}</span>
          </div>
          {event.ticketPrice && (
            <div class="meta-item">
              <span class="meta-label">Ticket Price</span>
              <span class="meta-value">{event.ticketPrice}</span>
            </div>
          )}
          {event.rsvp && (
            <div class="meta-item">
              <span class="meta-label">RSVP</span>
              <span class="meta-value">
                <a href={event.rsvp} target="_blank">Get your tickets</a>
              </span>
            </div>
          )}
        </div>

        <div class="description-section">
          <h2 class="section-title">About This Event</h2>
          <p class="description">{event.description}</p>
        </div>

        {event.blog && (
          <div class="blog-section">
            <h2 class="section-title">From the Artist</h2>
            <div class="blog-content">
              {event.blog.split('\n\n').map(paragraph => (
                <p>{paragraph}</p>
              ))}
            </div>
          </div>
        )}

        {event.tags && event.tags.length > 0 && (
          <div class="tags-section">
            <h2 class="section-title">Tags</h2>
            <div class="tags-container">
              {event.tags.map(tag => (
                <span class="tag">{tag}</span>
              ))}
            </div>
          </div>
        )}

        <div class="share-section">
          <h3 class="share-title">Share this event:</h3>
          <div class="share-buttons">
            <!-- X (Twitter) Share -->
            <a href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(shareMessage)}`} 
               target="_blank" 
               class="share-btn twitter">
              <svg class="icon" viewBox="0 0 24 24">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
              Share on X
            </a>

            <!-- LinkedIn Share -->
            <a href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(eventUrl)}`} 
               target="_blank" 
               class="share-btn linkedin">
              <svg class="icon" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
              Share on LinkedIn
            </a>

            <!-- Instagram Copy -->
            <button onclick={`navigator.clipboard.writeText("${shareMessage}"); alert("Copied to clipboard! Now paste it in your Instagram post.")`} 
                    class="share-btn instagram">
              <svg class="icon" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
              Copy for Instagram
            </button>

            <!-- Generic Copy Link -->
            <button onclick={`navigator.clipboard.writeText("${eventUrl}"); alert("Event link copied to clipboard!")`} 
                    class="share-btn copy">
              <svg class="icon" viewBox="0 0 24 24">
                <path d="M16 1H4c-1.1 0-2 .9-2 2v14h2V3h12V1zm3 4H8c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h11c1.1 0 2-.9 2-2V7c0-1.1-.9-2-2-2zm0 16H8V7h11v14z"/>
              </svg>
              Copy Link
            </button>
          </div>
        </div>
      </div>
    </div>

    <div class="footer-nav">
      <a href="/" class="back-link">üè† Home</a> | 
      <a href="/events" class="back-link">üéµ All Events</a> | 
      <a href="/search" class="back-link">üîç Search</a>
    </div>
  </body>
</html>
