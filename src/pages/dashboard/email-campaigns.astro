import { authenticateUser } from '../../../lib/auth-middleware.js';
import { Pool } from 'pg';

// Check authentication
const authResult = await authenticateUser(Astro.request);
if (!authResult.user) {
  return Astro.redirect('/auth/login');
}

const user = authResult.user;

// Database connection
const connectionString = process.env.NEON_DATABASE_URL || process.env.DATABASE_URL || 
  'postgresql://ishanpathak@localhost:5432/artist_events';

const pool = new Pool({
  connectionString,
  ssl: process.env.NODE_ENV === 'production' ? { rejectUnauthorized: false } : false,
});

// Get email templates
async function getEmailTemplates() {
  const client = await pool.connect();
  try {
    const result = await client.query(`
      SELECT id, name, description, category, preview_image_url, variables
      FROM email_templates 
      WHERE is_active = true
      ORDER BY category, name
    `);
    return result.rows;
  } finally {
    client.release();
  }
}

// Get user's campaigns
async function getUserCampaigns(userId) {
  const client = await pool.connect();
  try {
    const result = await client.query(`
      SELECT 
        ec.*,
        et.name as template_name,
        et.category as template_category,
        CASE 
          WHEN ec.status = 'pending' THEN '‚è≥ Pending Review'
          WHEN ec.status = 'approved' THEN '‚úÖ Approved'
          WHEN ec.status = 'rejected' THEN '‚ùå Rejected'
          WHEN ec.status = 'sent' THEN 'üìß Sent'
          WHEN ec.status = 'draft' THEN 'üìù Draft'
          ELSE ec.status
        END as status_display
      FROM email_campaigns ec
      JOIN email_templates et ON ec.template_id = et.id
      WHERE ec.artist_id = $1
      ORDER BY ec.created_at DESC
    `, [userId]);
    return result.rows;
  } finally {
    client.release();
  }
}

// Get subscriber count for audience estimation
async function getSubscriberCount() {
  const client = await pool.connect();
  try {
    const result = await client.query(`
      SELECT COUNT(*) as count
      FROM email_subscriptions 
      WHERE is_subscribed = true
    `);
    return result.rows[0].count;
  } finally {
    client.release();
  }
}

const templates = await getEmailTemplates();
const campaigns = await getUserCampaigns(user.id);
const subscriberCount = await getSubscriberCount();
