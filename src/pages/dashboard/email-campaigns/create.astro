              <label class="form-label" for="subject">Email Subject *</label>
              <input 
                type="text" 
                id="subject" 
                name="subject" 
                class="form-input" 
                required 
                placeholder="e.g., üéµ New Show Announcement from {user.first_name}"
              />
              <div class="form-help">Make it engaging! This is what subscribers see first in their inbox.</div>
            </div>
          </div>

          <!-- Audience Selection -->
