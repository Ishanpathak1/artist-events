      margin-bottom: 2rem;
      line-height: 1.6;
    }

    .discover-btn {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 12px 24px;
      background: #3b82f6;
      color: white;
      text-decoration: none;
      border-radius: 8px;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    .discover-btn:hover {
      background: #1d4ed8;
      transform: translateY(-2px);
    }

    @media (max-width: 768px) {
      .page-title {
        font-size: 2.5rem;
      }

      .followers-grid {
        grid-template-columns: 1fr;
      }

      .follower-card {
        padding: 1.5rem;
      }
    }
  </style>
</Layout> 