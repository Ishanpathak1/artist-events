---
import Layout from '../layouts/Layout.astro';
import { authenticateUser } from '../../lib/auth-middleware.js';
import { Pool } from 'pg';

// Require authentication
const authResult = await authenticateUser(Astro.request);
if (!authResult || !authResult.user) {
  Astro.redirect('/auth/login?redirect=/followers');
}

const user = authResult.user;

const connectionString = process.env.NEON_DATABASE_URL || process.env.DATABASE_URL || 
  'postgresql://ishanpathak@localhost:5432/artist_events';

const pool = new Pool({
  connectionString,
  ssl: process.env.NODE_ENV === 'production' ? { rejectUnauthorized: false } : false,
});

// Get user's followers
async function getFollowers(userId) {
  const client = await pool.connect();
  try {
    const result = await client.query(`
      SELECT 
        u.id, u.name, u.bio, u.location, u.avatar_url, u.user_type,
        as_sub.subscribed_at as following_since
      FROM artist_subscriptions as_sub
      JOIN users u ON as_sub.user_id = u.id
      WHERE as_sub.artist_id = $1 AND as_sub.is_subscribed = true
      ORDER BY as_sub.subscribed_at DESC
    `, [userId]);
    
    return result.rows;
  } finally {
    client.release();
  }
}

const followers = await getFollowers(user.id);
---

<Layout title="My Followers - Artist Events">
  <div class="followers-container">
    <header class="followers-header">
      <div class="header-content">
        <h1 class="page-title">üë• My Followers</h1>
        <p class="page-subtitle">
          People who follow you and get notified about your updates.
        </p>
        
        <div class="followers-stats">
          <div class="stat-item">
            <span class="stat-number">{followers.length}</span>
            <span class="stat-label">Total Followers</span>
          </div>
        </div>
      </div>
    </header>

    <main class="followers-content">
      {followers.length > 0 ? (
        <div class="followers-section">
          <div class="section-header">
            <h2 class="section-title">Your Followers</h2>
            <a href="/profile" class="back-btn">
              ‚Üê Back to Profile
            </a>
          </div>

          <div class="followers-grid">
            {followers.map(follower => (
              <div class="follower-card">
                <div class="follower-header">
                  <div class="follower-avatar">
                    {follower.avatar_url ? (
                      <img src={follower.avatar_url} alt={follower.name} />
                    ) : (
                      follower.name.split(' ').map(n => n[0]).join('').toUpperCase()
                    )}
                  </div>
                  
                  <div class="follower-info">
                    <h3 class="follower-name">{follower.name}</h3>
                    <div class="follower-badges">
                      <span class={`badge ${follower.user_type}`}>
                        {follower.user_type === 'artist' ? 'üé® Artist' : 'üë• Audience'}
                      </span>
                    </div>
                    <div class="following-since">
                      Following since {new Date(follower.following_since).toLocaleDateString('en-US', { 
                        month: 'long', 
                        day: 'numeric',
                        year: 'numeric' 
                      })}
                    </div>
                  </div>
                </div>

                {follower.bio && (
                  <p class="follower-bio">{follower.bio}</p>
                )}
              </div>
            ))}
          </div>
        </div>
      ) : (
        <div class="empty-state">
          <div class="empty-icon">üë•</div>
          <h3 class="empty-title">No followers yet</h3>
          <p class="empty-description">
            Share your content and engage with the community to gain followers!
          </p>
          <a href="/artists" class="discover-btn">
            üîç Discover Artists
          </a>
        </div>
      )}
    </main>
  </div>

  <style>
    .followers-container {
      min-height: 100vh;
      background: #f8fafc;
    }

    .followers-header {
      background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
      color: white;
      padding: 4rem 0 2rem;
      text-align: center;
    }

    .header-content {
      max-width: 1000px;
      margin: 0 auto;
      padding: 0 20px;
    }

    .page-title {
      font-size: 3rem;
      font-weight: 700;
      margin-bottom: 1rem;
    }

    .page-subtitle {
      font-size: 1.2rem;
      opacity: 0.9;
      margin-bottom: 2rem;
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
    }

    .followers-stats {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
      gap: 2rem;
      max-width: 300px;
      margin: 0 auto;
    }

    .stat-item {
      text-align: center;
    }

    .stat-number {
      font-size: 2rem;
      font-weight: 700;
      display: block;
      margin-bottom: 0.25rem;
    }

    .stat-label {
      opacity: 0.8;
      font-size: 0.9rem;
    }

    .followers-content {
      max-width: 1200px;
      margin: 0 auto;
      padding: 3rem 20px;
    }

    .section-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2rem;
      flex-wrap: wrap;
      gap: 1rem;
    }

    .section-title {
      font-size: 1.5rem;
      font-weight: 700;
      color: #1e293b;
    }

    .back-btn {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 10px 20px;
      background: #3b82f6;
      color: white;
      text-decoration: none;
      border-radius: 8px;
      font-weight: 500;
      transition: all 0.3s ease;
    }

    .back-btn:hover {
      background: #1d4ed8;
      transform: translateY(-2px);
    }

    .followers-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
      gap: 2rem;
    }

    .follower-card {
      background: white;
      border-radius: 16px;
      padding: 2rem;
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
      border: 1px solid rgba(226, 232, 240, 0.8);
      transition: all 0.3s ease;
    }

    .follower-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
    }

    .follower-header {
      display: flex;
      align-items: flex-start;
      gap: 1rem;
      margin-bottom: 1rem;
    }

    .follower-avatar {
      width: 60px;
      height: 60px;
      border-radius: 50%;
      background: linear-gradient(135deg, #3b82f6, #1d4ed8);
      display: flex;
