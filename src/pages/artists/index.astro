      @media (max-width: 480px) {
        .main-content {
          padding: 2rem 16px;
        }

        .header-stats {
          grid-template-columns: repeat(2, 1fr);
        }

        .artist-header {
          flex-direction: column;
          text-align: center;
        }

        .artist-info {
          text-align: center;
        }
      }
    </style>
  </head>
  <body>
